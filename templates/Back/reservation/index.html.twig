
{% extends 'baseBack.html.twig' %}
{% block title %}Reservation index{% endblock %}




{% block body %}
 <div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Form reservations </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Events management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Form events</li>
                </ol>
            </nav>
        </div>
    <div class="row ">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Reservation list</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name event</th>
                                <th>User firstName</th>
                                <th>User lastName</th>
                                <th>User email</th>
                                <th>User phone number</th>
                                <th>DateReservation</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for reservation in reservations %}
                                <tr>
                                    <td>{{ reservation.id }}</td>
                                    <td>{{ reservation.evenement.NameEvent }}</td>
                                    <td>{{ user.firstname}}</td>
                                    <td>{{ user.lastname }}</td>
                                    <td>{{ user.email}}</td>
                                    <td>{{ user.phonenumber }}</td>
                                    <td>{{ reservation.DateReservation ? reservation.DateReservation|date('Y-m-d , h:m') : '' }}</td>
                                    <td><div class="badge badge-outline-success"><a href="{{ path('reservation_show', {'id': reservation.id}) }}" >show</a></div></td></td>
                                    <td><div class="badge badge-outline-danger" ><a href="{{ path('reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">delete</a></div></td>

                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <div>
                        </div>
                        {{ knp_pagination_render(reservations) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
