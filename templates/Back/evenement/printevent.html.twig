

{% block body %}
<h1>Events list</h1>
<div class="main-panel">
    <div class="content-wrapper">

        <div class="row ">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Event list</h4>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-9"></div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>IdEvent</th>
                                <th>Event name</th>
                                <th>Event place</th>
                                <th>Event begins at</th>
                                <th>Event ends at</th>
                                <th>Event price</th>
                                <th>Participants</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for evenement in evenements %}
                                <tr>
                                    <td>{{ evenement.id }}</td>
                                    <td>{{ evenement.NameEvent }}</td>
                                    <td>{{ evenement.PlaceEvent }}</td>
                                    <td>{{ evenement.DateDebut ? evenement.DateDebut|date('Y-m-d , h:m') : '' }}</td>
                                    <td>{{ evenement.DateFin ? evenement.DateFin|date('Y-m-d , h:m') : '' }}</td>                                    <td>{{ evenement.PriceEvent }} DT</td>
                                    <td>{{ evenement.NbParticipants }}</td>
                                </tr>
                            {% else %}
                                <td colspan="7">no records found</td>
                            {% endfor %}

                            </tbody>

                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endblock %}
