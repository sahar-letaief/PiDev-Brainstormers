{% extends 'baseBack.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}


    <table class="table table-dark">
        <tbody>
            <tr class="table-dark">
                <th>Reférence Commande</th>
                <td>{{ commande.refCmde }}</td>
            </tr>
            <tr>
                <th>Etat commande</th>
                <td>{{ commande.etatCmde ? 'en cours ' : 'annulée' }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ commande.pays }}</td>
            </tr>
            <tr>
                <th>Région</th>
                <td>{{ commande.region }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ commande.CodePostal }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ commande.tel }}</td>
            </tr>  
             <tr>
                <th>Produits</th>
                <td>{% for pr in products %}
                    {{ pr.name }} {{ pr.price }}      <br/>      
                {% endfor %}</td>
                
                 
            </tr>
        </tbody>
    </table>

{% endblock %}
