{% extends 'baseBack.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
                    <p class="card-description">Liste des commandes
                    </p>
                    
                    <div class="table-responsive">
                      <table class="table table-dark">
          
    <table class="table table-dark">
        <thead>
            <tr class="table-dark">
                <th>Ref_cmde</th>
                <th>Etat_cmde</th>
                <th>Produit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.refCmde }}</td>
                <td>{{ commande.etatCmde ? 'en cours' : 'annul√©' }}</td>
                <td>{% for pr in products %}
                     {{ pr.name }} // {{ pr.price }} <br> <br>           
                {% endfor %}
                </td>   
                <td>  
                    <div class="blog__details__comment__item__text">
                        <a href="{{ path('commande_show_back', {'id': commande.id}) }}">show</a>
                        <a href="{{ path('commande_edit_back', {'id': commande.id}) }}">edit</a>
                    </div>                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">pas de commande</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>


{% endblock %}
