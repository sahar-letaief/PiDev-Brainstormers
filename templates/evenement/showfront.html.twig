{% extends 'baseFront.html.twig' %}
{% block body %}

    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                        <a href="./categories.html">Events</a>
                        <span>Events list</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <section class="anime-details spad">
        <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" >
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>{{ evenement.NameEvent }}</h3>
                        </div>
                        <div class="anime__details__rating">

                        </div>

                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Place event:</span>{{ evenement.PlaceEvent}}</li>
                                        <li><span>Event begins at:</span> {{ evenement.DateDebut ? evenement.DateDebut|date('Y-m-d ') : '' }}</li>
                                        <li><span>Event ends at:</span> {{ evenement.DateFin ? evenement.DateFin|date('Y-m-d') : '' }}</li>
                                        <li><span>Participants :</span>{{ evenement.NbParticipants}}</li>
                                        <li><span>Event Price:</span>{{ evenement.PriceEvent }} DT</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-6">
                            {% if qrcode %}
                                <img src="{{ qrcode }}" alt="qr-code" style="position: center;">
                            {% endif %}
                        </div>
                        <br>
                        <div class="anime__details__btn">
                            <a href="{{ path('evenement_index2') }}" class="follow-btn">Back to list</a>
                            <a href="{{ path('reservation_new_front',{'id': evenement.id}) }}" class="watch-btn"><span>Add reservation</span> </a>
                            <a href="{{ path('images_events_new',{'id': evenement.id}) }}" class="watch-btn"><span>Add imagess</span> </a>

                        </div>

                    </div>
                </div>


            </div>

        </div>

    </div>
    </section>
{% endblock %}
