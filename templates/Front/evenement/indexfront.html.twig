{% extends 'baseFront.html.twig' %}
{% block body %}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                    <a href="{{ path('evenement_index2') }}">Show events</a>
                  <span> <a href="{{ path('reservation_index2') }}">Show reservations</a></span>

                </div>
            </div>
        </div>
    </div>
</div>
        {% for evenement in evenements %}
<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" >
                        <img src={{ asset('public/Front' ~ evenement.ImageEvent)}} >
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>{{ evenement.NameEvent }}</h3>
                        </div>


                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Place event:</span>{{ evenement.PlaceEvent}}</li>
                                        <li><span>Event begins at:</span> {{ evenement.DateDebut ? evenement.DateDebut|date('Y-m-d , h:m') : '' }}</li>
                                        <li><span>Event ends at:</span> {{ evenement.DateFin ? evenement.DateFin|date('Y-m-d , h:m') : '' }}</li>
                                        <li><span>Participants :</span>{{ evenement.NbParticipants}}</li>
                                        <li><span>Event Price:</span>{{ evenement.PriceEvent }} DT</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="anime__details__btn">
                            <a href="{{ path('evenement_show_front',{'id': evenement.id}) }}" class="follow-btn">Show event</a>
                            <a href="{{ path('reservation_new_front',{'id': evenement.id}) }}" class="watch-btn"><span>Add reservation</span> <i
                                        class="fa fa-angle-right"></i></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <td colspan="7">no records found</td>
        {% endfor %}
        <div> {{ knp_pagination_render(evenements) }}</div>
    </div>
    </section>
{% endblock %}
