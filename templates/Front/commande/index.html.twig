{% extends 'baseFront.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block content %}

<div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="{{ path('default') }}"><i class="fa fa-home"></i> Homepage</a>
                        <a href="{{ path('cart') }}">Orders</a>
                    </div>
                </div>
            </div>
        </div>


<section class="anime-details spad">
        <div class="container">
        <div class="anime__details__content">
          <div class="product__page__title">
                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-6">
                                    <div class="section-title">
                                        <h4>list of commands </h4>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6">
                                    <div class="anime__details__btn">
                                        <a href="{{ path('commande_new') }}" class="watch-btn"><span>Command</span> <i
                                    class="fa fa-angle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
        
    <table class="table table-dark">
        {{ form_start(form)}}
        {{ form_widget(form) }}
        {{ form_end(form) }}
        <thead>
            <tr class="table-dark">
                <th>Order reference</th>
                <th>order status</th>
                <th>Country</th>
                <th>Product name</th>
                <th>Product price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.refCmde }}</td>
                <td>{{ commande.etatCmde ? 'In progress' : 'canceled' }}</td>
                 <td>{{ commande.Pays }}</td>
                <td>{% for pr in products %}
                     {{ pr.name }}<br> <br>
                     {% endfor %}
                </td>
                <td>{% for pr in products %}
                     {{ pr.price }} TND <br> <br>
                     {% endfor %}
                </td> 
                <td>  
                    <div class="blog__details__comment__item__text">
                        <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                        <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                        <a href="{{ path('commande_liste', {'id': commande.id}) }}">Print to pdf</a>
                    </div>                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No order</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
            {{ knp_pagination_render(commandes) }}
        </div>
    </div>
</section>


{% endblock %}
