
{% extends 'baseBack.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Inverse table</h4>
                    <p class="card-description">Catégories<code>/Liste des Catégories </code>
                    </p>
                    {%for message in app.flashes('success')%}
                        <div class="alert alert-success">
                           {{message}}
                        </div>

                    {%endfor%}
                    <div class="table-responsive">
                      <table class="table table-dark">
                        <thead>
                         <tr>
                      
                          <th>Name</th>
                          <th>Desciprtion</th>
                          <th>actions</th>
                          </tr>
                        </thead>
                        <tbody>
        {% for category in categories %}
           <tr>
                
                <td>{{ category.Name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="mdi mdi-eye"></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="mdi mdi-pencil"></a>
                    <a href="{{ path('category_delete', {'id': category.id}) }}" class="mdi mdi-delete"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(categories) }}
                      
                    </div>
                  </div>
                </div>
              </div>
              <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}