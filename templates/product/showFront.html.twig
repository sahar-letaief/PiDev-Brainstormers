{% extends 'baseFront.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="#"><i class="fa fa-home"></i> Home</a>
                        <a href="{{ path('productFront_index') }}">Products</a>
                        <span>{{ product.ProductName }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Anime Section Begin -->
    <section class="anime-details spad">
        <div class="container">
            <div class="anime__details__content">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="anime__details__pic set-bg" data-setbg="{{ asset('uploads/') ~product.image}}" alt="" class="img-fluid">
                            
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="anime__details__text">
                            <div class="anime__details__title">
                                <h3>{{ product.ProductName }}</h3>
                                <span>{{ product.Reference }}</span>
                            </div>
                           
                            <p>{{ product.Description }}</p>
                            <div class="anime__details__widget">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <ul>
                                            <ul>
                                            <li><span>Nom:</span>{{ product.ProductName }}</li>
                                            <li><span>Prix:</span>{{ product.Price }}TND</li>
                                        
                                        </ul>
                                        </ul>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="anime__details__btn">
                                <a href="{{ path('cart_add', {'id': product.id}) }}" class="watch-btn"><span>Add To Cart</span> <i
                                    class="fa fa-angle-right"></i></a>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        </section>


    
{% endblock %}







    




        
           
                
                
           

    
    
    

