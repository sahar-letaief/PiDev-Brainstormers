{% extends 'baseFront.html.twig' %}
 {% block title %}Products{%endblock %}
{% block body %}



    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="trending__product">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                <div class="section-title">
                                    <h4>Products</h4>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <div class="btn__all">
                            
       
                     <a href="{{ path('product_par_cat')}}" class="primary-btn">Search with Category <span class="arrow_right"></span></a>
                     <a href="{{ path('product_par_prix')}}" class="primary-btn">Search With Price <span class="arrow_right"></span></a>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                        {% for product in products %}
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="{{ asset('uploads/') ~product.image}}">
                                        <div class="">{% if product.stock > 10 %}
                                        <span class="badge badge-success">
                                          Available </span>
                            
                                         {% else %}
                                         <span class="badge badge-danger">
                                          Sold-out!</span>
                                        {% endif %}</div>
                                        
                                        <div class="view"><i class="fa fa-shopping-cart"></i> </div>
                                    </div>
                                    <div class="product__item__text">
                                        <ul>
                                            <li>{{ product.Reference}}</li>
                                            
                                        </ul>
                                        <h5><a href="{{ path('product_show_front', {'id': product.id}) }}">{{ product.ProductName}}</a></h5>
                                        <h6><a href="#">{{ product.Price}}TND</a></h6>
                                        
                                    </div>
                                </div>
                            </div>
                                                     
                        
                        {% endfor %}
                            
                        
                             
                        </div>
                        {{ knp_pagination_render(products) }}
                    </div>
                </div>
        
        
                                
        
    </section>





 {% endblock %}
 
