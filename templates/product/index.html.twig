{% extends 'baseBack.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}




<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Inverse table</h4>
                    <p class="card-description">Admin<code>/List Of Products </code>
                    </p>
                    {%for message in app.flashes('success')%}
                        <div class="alert alert-success">
                           {{message}}
                        </div>

                    {%endfor%}
                    
                    
                    <div class="table-responsive">
                      <table class="table table-dark">
                      {{ form_start(form)}}
                      {{ form_widget(form) }}
                      {{ form_end(form) }}
                        <thead>
                         <tr>
                             <th>Reference</th>
                             <th>Name</th>
                             <th>Category</th>
                             <th>Price</th>
                             <th>Stock</th>
                             <th>Description</th>
                             <th>Image</th>
                             <th>Actions</th>
                         </tr>
                      </thead>
                        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.Reference }}</td>
                <td>{{ product.ProductName }}</td>
                <td>{{ product.Category }}</td>
                <td>{{ product.Price }}</td>
                <td>{{ product.Stock }}</td>
                <td>{{ product.Description }}</td>
                <td><img src="{{ asset('uploads/') ~product.image}}" alt="" class="img-fluid"></td>
                
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}", class="mdi mdi-eye"></a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" , class="mdi mdi-pencil"></a>
                    <a href="{{ path('product_delete', {'id': product.id}) }}", class="mdi mdi-delete"></a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
                      </table>
                      
                    </div>
                    
                    {{ knp_pagination_render(products) }}
                  </div>
                  
                </div>
              </div>
              
              <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}