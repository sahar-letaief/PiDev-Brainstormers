{% extends 'baseFront.html.twig' %}
{% block body %}
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="{{ path('evenement_index2') }}"><i class="fa fa-home"></i> Home</a>
                        <a href="{{ path('evenement_index2') }}">Show events</a>
                        <span> <a href="{{ path('reservation_index2') }}">Show reservations</a></span>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {% for message in app.flashes('Notice') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card"  style="background-color: #0b0c2a!important;" >
            <div class="card">

                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Name event</th>
                            <th>Event begins at</th>
                            <th>Event ends at</th>
                            <th>Reservation date</th>
                            <th></th>
                        </tr>
                        </thead>
                        {% for reservation in reservations %}
                        <tbody>
                        <tr>
                            <td>{{ reservation.evenement.NameEvent }}</td>
                            <td>{{ reservation.evenement.DateDebut ?reservation.evenement.DateDebut|date('Y-m-d ') : '' }}</td>
                            <td>{{ reservation.evenement.DateFin ?reservation.evenement.DateFin|date('Y-m-d ') : '' }}</td>
                            <td>{{ reservation.DateReservation ? reservation.DateReservation|date('Y-m-d ') : '' }}</td>
                            <td><div class="badge badge-outline-danger" ><a href="{{ path('reservation_delete_front', {'idR': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">delete</a></div></td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">No reservations for now</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    </div>
    <div align="left" class="badge badge-outline-warning"> <a href="{{ path('evenement_index2') }}">Back to events list</a></div>







{% endblock %}