{% extends 'baseFront.html.twig' %}

{% block title %}Command{% endblock %}

{% block body %}

<section class="anime-details spad">
        <div class="container">
        <div class="anime__details__content">
          <div class="product__page__title">
                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-6">
                                    <div class="section-title">
                                        <h4>Command </h4>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6">
                                    <div class="anime__details__btn">
                                        <a href="{{ path('commande_index') }}" class="watch-btn"><span>Back to list</span> <i
                                    class="fa fa-angle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>

    <table class="table table-dark">
        <tbody>
            <tr class="table-dark">
                <th>Order reference</th>
                <td>{{ commande.refCmde }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ commande.User.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ commande.User.lastname }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ commande.User.email }}</td>
            </tr>
            
            <tr>
                <th>Country</th>
                <td>{{ commande.pays }}</td>
            </tr>
            <tr>
                <th>Region/Departement</th>
                <td>{{ commande.region }}</td>
            </tr>
            <tr>
                <th>Postal code</th>
                <td>{{ commande.CodePostal }}</td>
            </tr>
            <tr>
                <th>Phone number</th>
                <td>{{ commande.tel }}</td>
            </tr>  
             <tr>
                <th>Product name</th>
                <td>{% for prod in commande.prod %}
                    {{ prod['ProductName'] }} 
                    {% endfor %}
                </td>
                </tr>
                <tr>
                <th>Quantity</th>
                <td>{% for prod in commande.prod %}
                    {{ prod['quantity'] }} 
                    {% endfor %}
                </td>
                </tr>
                <tr>
                <th>Product price</th>
                <td>{% for prod in commande.prod %}
                    {{ prod['ProductPrice'] }} TND
                    {% endfor %}
                </td>
                </tr>
                <tr>
                <th>Total</th>
                <td>{% for prod in commande.prod %}
                    {{ prod['quantity'] * prod['ProductPrice'] }}TND <br> <br>
                    {% endfor %}
                </td>
                </tr>
                
                 
            </tr>
        </tbody>
    </table>
 <div class="blog__details__comment__item__text">
    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit <i
                                    class="fa fa-angle-right"></i></a>
</div>  
    
    </div>
</section>
{% endblock %}
