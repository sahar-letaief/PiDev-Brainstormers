{% extends 'baseFront.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}

<div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="#"><i class="fa fa-home"></i> Homepage</a>
                        <a href="{{ path('cart') }}">Orders</a>
                    </div>
                </div>
            </div>
        </div>


<section class="anime-details spad">
        <div class="container">
        <div class="anime__details__content">
          <div class="product__page__title">
                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-6">
                                    <div class="section-title">
                                        <h4>list of commands </h4>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6">
                                    <div class="anime__details__btn">
                                        <a href="{{ path('commande_new') }}" class="watch-btn"><span>Command</span> <i
                                    class="fa fa-angle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
  
   
 <form class="w_search">
	       <div class="sidebar-search">
		      <div class="input-group custom-search-form">
			      <input type="text" id="search" name="search" class="form-control" placeholder="Search">
		        </div>
	       </div>
        </form>
   <table class="table table-dark">

        <thead>
            <tr class="table-dark">
                <th>Reference</th>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Bill</th>
                <th>actions</th>
            </tr>
        </thead>
        
        <tbody id="tableac" name="tableac">
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.refCmde }}</td>
                  <td>
                    {{ commande.User.firstname  }} {{ commande.User.lastname  }}
                </td>
                    <td>
                    {{ commande.User.email  }}

                </td>
                <td>
                    {% if commande.etatCmde is same as (null) %}
                    In progress {{ commande.etatCmde }}
                    {% endif %}
                    {% if commande.etatCmde is same as(false) %}
                         Canceled {{ commande.etatCmde }}
                    {% endif %}
                    {% if commande.etatCmde == 1 %}
                         Confirmed
                    {% endif %} 
                </td> 
                <td>{% for prod in commande.prod %}
                    {{ prod['ProductName'] }}  <br>
                    {% endfor %}
                </td>
                <td>{% for prod in commande.prod %}
                    {{ prod['quantity'] }} <br>
                    {% endfor %}
                </td>
                <td>{% for prod in commande.prod %}
                    {{ prod['ProductPrice'] }} TND<br>
                    {% endfor %}
                </td>
                <td>{% for prod in commande.prod %}
                    {{ prod['quantity'] * prod['ProductPrice'] }}  TND<br>
                    {% endfor %}
                </td>
                 <td>  
                    <div class="blog__details__comment__item__text">
                        <a href="{{ path('commande_liste', {'id': commande.id}) }}">Print</a>
                    </div>                   
                </td><br>
                <td>  
                    <div class="blog__details__comment__item__text">
                        <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a><hr>
                        <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                    </div>                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No order</td>
            </tr>
        {% endfor %}
        </tbody>
        

    </table>
    <div class="navigation">
            {{ knp_pagination_render(commandes) }}
        </div>
    </div>
</section>

{% endblock %}

