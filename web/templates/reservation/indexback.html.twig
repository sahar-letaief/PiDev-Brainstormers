
{% extends 'baseBack.html.twig' %}
{% block title %}Reservation index{% endblock %}




{% block body %}
<style>

    .pagination{
        justify-content: center;
    }
    .current{
        margin: 0px 5px 0px 5px;
        border-radius: 50%;
        width: 2.6%;
        height: 1%;
        text-align: center;
        background-color: #0090e7;
    }

    .page{
        margin: 0px 5px 0px 5px;
        border-radius: 50%;
        width: 2.6%;
        height: 1%;
        text-align: center;
        background-color: #0090e7;
    }

    .page a{
        color: white;
    }

    .previous a{
        color: white;
        margin-left: 5px;
        border-bottom: 1px solid #00d25b;
    }
    .next a{
        color: white;
        margin-right: 5px;
        border-bottom: 1px solid #00d25b;
    }

    .first a{
        color: #00d25b;
        margin-left: 5px;
        border-bottom: 1px solid #00d25b;
    }
    .last a{
        color: #00d25b;
        border-bottom: 1px solid #00d25b;
    }
</style>
 <div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Form reservations </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Events management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Form events</li>
                </ol>
            </nav>
        </div>
    <div class="row ">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">


                    <h4 class="card-title">Reservation list</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name event</th>
                                <th>User first name</th>
                                <th>User last name</th>
                                <th>User email</th>
                                <th>User phone number</th>
                                <th>Reservation date</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for reservation in reservations %}
                                <tr>
                                    <td>{{ reservation.id }}</td>
                                    <td>{{ reservation.evenement.NameEvent }}</td>
                                    <td>{{ user.firstname}}</td>
                                    <td>{{ user.lastname }}</td>
                                    <td>{{ user.email}}</td>
                                    <td>{{ user.phonenumber }}</td>
                                    <td>{{ reservation.DateReservation ? reservation.DateReservation|date('Y-m-d ') : '' }}</td>


                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div style="display: flex">
                            {% if (back) %}
                                <div style="display: grid; margin-top: 20px;">
                                    <a class="btn btn-outline-primary btn-fw" href="{{ path('reservation_index') }}">Back</a>
                                </div>
                            {% endif %}
                        </div>

                        <div>
                        </div>
                        {{ knp_pagination_render(reservations) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
