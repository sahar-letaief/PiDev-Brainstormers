    <section class="anime-details spad">
        <div class="container">
            <div class="anime__details__content">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="anime__details__pic set-bg" >
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="anime__details__text">
                            <div class="anime__details__title">
                                <h3>Add reservation</h3>
                            </div>
                            <div class="anime__details__widget">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <ul>
                                            {{form_start(form,{'attr':{'novalidate':'novalidate'}})  }}
                                                    <div> <li><span>Event name:</span>{{ ev.NameEvent }}</li></div>
                                            <li> <span>Player first name:</span>{{ user.firstname  }}</li>
                                            <li><span>Player last name:</span> {{ user.lastname  }}</li>
                                            <li><span>Player email:</span>{{ user.email  }}</li>
                                            <li><span>Player phone number:</span>{{ user.phonenumber  }}</li>
                                            <li><span> Reservation date:</span>
                                                {{DateReservation ? DateReservation|date('Y-m-d ') : ''  }}</li>


                                        </ul>
                                    </div>

                                </div>
                            </div>
                            <div class="anime__details__btn">
                                <a href="{{ path('evenement_index2') }}"  class="follow-btn">Back to list</a>
                                <a  class="follow-btn"><span>{{ form_widget(form.submit ) }}</span> <i
                                            class="fa fa-angle-right"></i></a>

                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>



{% endblock %}