{% extends 'baseBack.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
                    <p class="card-description">list of commands
                    </p>
                    
                    <div class="table-responsive">
                      <table class="table table-dark">
          
    <table class="table table-dark">
        {{ form_start(form)}}
        {{ form_widget(form) }}
        {{ form_end(form) }}
        <thead>
            <tr class="table-dark">
                <th>Order reference</th>
                <th>order status</th>
                <th>Product name</th>
                <th>Quantity</th>
                <th>Product price</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.refCmde }}</td>
                {% if not (commande.etatCmde) %}
                <td>in progress</td>

                {% else%}

                {% if commande.etatCmde == 1 %}
                   <td> confirmed </td>
                   {% else %}
                   <td> canceled </td>
                {% endif%}


                {% endif %}

                <td>{% for prod in commande.prod %}
                    {{ prod['ProductName'] }}  <br> <br>
                    {% endfor %}
                </td>
                <td>{% for prod in commande.prod %}
                    {{ prod['quantity'] }} <br> <br>
                    {% endfor %}
                </td>
                <td>{% for prod in commande.prod %}
                    {{ prod['ProductPrice'] }} TND<br> <br>
                    {% endfor %}
                </td>
                <td>{% for prod in commande.prod %}
                    {{ prod['quantity'] * prod['ProductPrice'] }} TND <br> <br>
                    {% endfor %}
                </td>  
                <td>  
                    <div class="blog__details__comment__item__text">
                        <a href="{{ path('commande_show_back', {'id': commande.id}) }}">show</a>
                        <a href="{{ path('commande_edit_back', {'id': commande.id}) }}">edit</a>
                       
                    </div>                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No order</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
            {{ knp_pagination_render(commandes) }}
        </div>
</div>
</div>
</div>


{% endblock %}
