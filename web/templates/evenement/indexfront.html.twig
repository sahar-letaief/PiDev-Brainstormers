{% extends 'baseFront.html.twig' %}
{% block body %}
    <style>
        .alert {
            position: relative;
            padding: 1.75rem 28.25rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
            border-radius: 0.25rem;
        }

        .pagination{
            justify-content: center;
        }
        .current{
            margin: 0px 5px 0px 5px;
            border-radius: 50%;
            width: 1.6%;
            height: 1%;
            text-align: center;
            background-color: #0090e7;
        }

        .page{
            margin: 0px 5px 0px 5px;
            border-radius: 50%;
            width: 1.6%;
            height: 1%;
            text-align: center;
            background-color: #0090e7;
        }

        .page a{
            color: white;
        }

        .previous a{
            color: white;
            margin-left: 5px;
            border-bottom: 1px solid #00d25b;
        }
        .next a{
            color: white;
            margin-right: 5px;
            border-bottom: 1px solid #00d25b;
        }

        .first a{
            color: #00d25b;
            margin-left: 5px;
            border-bottom: 1px solid #00d25b;
        }
        .last a{
            color: #00d25b;
            border-bottom: 1px solid #00d25b;
        }
    </style>
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="{{ path('evenement_index2') }}"><i class="fa fa-home"></i> Home</a>
                    <a href="{{ path('evenement_index2') }}">Show events</a>
                  <span> <a href="{{ path('reservation_index2') }}">Show reservations</a></span>

                </div>
            </div>
        </div>
    </div>

    {% for message in app.flashes('notice') %}
     <div class="alert alert-success">
         {{ message }}
      </div>
    {% endfor %}


</div>

        {% for evenement in evenements %}
<div class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>{{ evenement.NameEvent }}</h3>
                        </div>


                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Place event:</span>{{ evenement.PlaceEvent}}</li>
                                        <li><span>Event begins at:</span> {{ evenement.DateDebut ? evenement.DateDebut|date('Y-m-d') : '' }}</li>
                                        <li><span>Event ends at:</span> {{ evenement.DateFin ? evenement.DateFin|date('Y-m-d') : '' }}</li>
                                        <li><span>Participants :</span>{{ evenement.NbParticipants}}</li>
                                        <li><span>Event Price:</span>{{ evenement.PriceEvent }} DT</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="anime__details__btn">
                            <a href="{{ path('evenement_show_front',{'id': evenement.id}) }}" class="follow-btn">Show event</a>
                            <a href="{{ path('reservation_new_front',{'id': evenement.id}) }}" class="watch-btn"><span>Add reservation</span> <i
                                        class="fa fa-angle-right"></i></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <td colspan="7">no records found</td>
        {% endfor %}
        <div> {{ knp_pagination_render(evenements) }}</div>
    </div>
</div>
</div>
    <div class="inner-page" >
        <br>
        <br>
        <br>
        <div class="wpb_column vc_column_container vc_col-sm-6"><section class="vc_column-inner"><div class="wpb_wrapper">
                    <div class="wpb_text_column wpb_content_element " >
                        <div class="wpb_wrapper">
