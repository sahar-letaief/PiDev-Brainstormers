{% extends 'baseBack.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">

            <h5 class="page-title">Admin<code>/{% trans %} View {% endtrans %} </code></h5>
            <nav aria-label="breadcrumb">
            {% for locale in locales %}
                {% if locale != app.request.locale %}
                <ol class="breadcrumb">
                    <a  href="{{ path('change_locale', {'locale': locale}) }}"><img src="{{ asset('back/assets/images/'~locale~'.png') }}" alt="{{locale}}" width="80px" height="50px" /></a>
                {% endif %}
            {% endfor %}
                </ol>
            </nav>
        </div>
                    <div class="table-responsive">
                      
                          <h1>{% trans %}Category{% endtrans %}</h1>

                    <table class="table">
                      <tbody>
                    
                          <tr class="table table-dark">
                             <th>{% trans %}Name{% endtrans %}</th>
                            <td>{{ category.Name }}</td>
                          </tr>
                          <tr class="table table-dark">
                             <th>{% trans %}Desciprtion{% endtrans %}</th>
                            <td>{{ category.description }}</td>
                          </tr>
                          
                     </tbody>
                  </table>
                  <div class="card-footer">
                  <div class="row">
                    
                    
                   <a class="nav-link btn btn-warning create-new-button" id="createbuttonDropdown" data-toggle="dropdown" aria-expanded="false" href="{{ path('category_edit', {'id': category.id}) }}">{% trans %}Edit{% endtrans %}</a>
                   <a class="nav-link btn btn-primary create-new-button" id="createbuttonDropdown" data-toggle="dropdown" aria-expanded="false" href="{{ path('category_index') }}">{% trans %}Back{% endtrans %}</a>
                   <a class="nav-link btn btn-danger create-new-button" id="createbuttonDropdown" data-toggle="dropdown" aria-expanded="false" href="{{ path('category_delete', {'id': category.id}) }}">{% trans %}Delete{% endtrans %}</a>

                  </div>
                  </div>
                        
                      
  
{% endblock %}
